{
  "name": "book-tracker-functions",
  "version": "2.0.0",
  "description": "Book search and notification functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
